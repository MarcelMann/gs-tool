<?xml version="1.0" encoding="UTF-8"?>
<gswb:menubar xmlns="org/miv/graphstream" xmlns:gswb="workbench">
	<!--File menu--><menu id="file" name="@gettext(menu:file)">
		<item command="@getaction(file:new)"/>
		<item command="@getaction(file:open)"/><menu
			id="file:lastopened" name="@gettext(file:lastopened)" icon="@file:lastopened">
</menu>
	<menu
			id="algorithm:generator" name="@gettext(menu:generate)" disableOn="noContext" enableOn="contextAdded">
</menu><separator></separator>
		<item command="@getaction(file:save)" disableOn="noContext" enableOn="contextAdded"/>
		<item command="@getaction(file:saveas)" disableOn="noContext" enableOn="contextAdded">
		</item>
		<item command="@getaction(file:restore)" disableOn="noContext"
			enableOn="contextAdded">
		</item>
		<separator/>
		<item command="@getaction(system:exit)"/>
	</menu><!--Edit menu-->
	<menu id="edit" name="@gettext(menu:edit)">
		<item command="@getaction(edit:undo)" disableOn="historyUndoDisable" enableOn="historyUndoEnable"></item>
		<item command="@getaction(edit:redo)" enableOn="historyRedoEnable" disableOn="historyRedoDisable"></item>
		<separator></separator>
		<menu name="@gettext(menu:select)" enableOn="contextAdded" disableOn="noContext">
			<item name="@gettext(menu:selectall)" command="@CLI:select all" strokeKey="VK_A" strokeModifier="CTRL_MASK"/>
			<item name="@gettext(menu:unselectall)" command="@CLI:unselect all" strokeKey="VK_A" strokeModifier="CTRL_MASK,SHIFT_MASK"/>
		</menu>
		<separator/>
		<item command="@getaction(edit:copy)"/>
		<item command="@getaction(edit:cut)"/>
		<item command="@getaction(edit:paste)" enableOn="clipboardCopy,clipboardCut" disableOn="clipboardEmpty"/>
		<separator/><item command="@getaction(edit:find)" disableOn="noContext" enableOn="contextAdded"></item>
		<separator></separator>
		<item command="@getaction(system:options)"/>
	</menu><!--Dialog menu-->
	<menu id="dialog" name="@gettext(menu:dialog)" disableOn="fullMode" enableOn="normalMode"></menu><!--Algorithms menu-->
	<menu id="algorithm" name="@gettext(menu:algorithms)" disableOn="noContext"
		enableOn="contextAdded">
		<menu id="algorithm:coloring" name="@gettext(menu:coloring)">
		</menu>
		<menu id="algorithm:measure" name="@gettext(menu:measure)"></menu>
	</menu><!--Help menu-->
	<menu id="help" name="@gettext(system:help)">
		<item command="@getaction(system:help)"></item>
		<separator></separator><item name="@gettext(menu:manual)" command="@getaction(help:manual)"/>
		<item name="@gettext(menu:tutorials)" command="@getaction(help:tutorials)"/>
		<separator/>
		<item name="@gettext(menu:about)" command="menu.help.about"/>
	</menu>
	
</gswb:menubar>
